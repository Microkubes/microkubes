{
    "serverName": "Microkubes Authorization Server",
    "security": {
      "keys": {
        "default": "/run/secrets/default",
        "system": "/run/secrets/system"
      },
      "signingMethod": "RS256",
      "issuer": "oauth2-auth-server"
    },
    "microservice": {
      "name": "oauth2-auth-server",
      "port": 8080,
      "paths": [ "/oauth2", "/auth" ],
      "virtual_host": "authorization-server.service.consul",
      "weight": 10,
      "slots": 10
