    "services": {
      "userServiceURL": "http://kong:8000/users",
      "appsServiceURL": "http://kong:8000/apps"
    },
    "database": {
      "host": "mongo:27017",
      "database": "oauth2",
      "user": "authserver",
      "pass": "authserver"
    },
